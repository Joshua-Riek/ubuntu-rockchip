#!/usr/bin/make -f

include /usr/share/dpkg/architecture.mk
include /usr/share/dpkg/pkg-info.mk

ifneq ($(DEB_BUILD_GNU_TYPE),$(DEB_HOST_GNU_TYPE))
CROSS_COMPILE ?= $(DEB_HOST_GNU_TYPE)-
endif

ifneq (,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
NJOBS := -j $(patsubst parallel=%,%,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
else
NJOBS := -j $(shell nproc)
endif

DDR_BLOB := rk3588_ddr_lp4_2112MHz_lp5_2736MHz_v1.11.bin
BL31_BLOB := rk3588_bl31_v1.38.elf

BOARDS := turing-rk1-rk3588

${BOARDS}: 
	@mkdir -p debian/build/$@

	make O=debian/build/$@ \
	  CROSS_COMPILE=$(CROSS_COMPILE) \
	  ARCH=arm \
	  $(NJOBS) \
	  $@_defconfig

	@touch .scmversion
	@sed -i 's/CONFIG_BOOTDELAY=.*/CONFIG_BOOTDELAY=1/g' debian/build/$@/.config
	@sed -i 's/CONFIG_DISABLE_CONSOLE=y/CONFIG_DISABLE_CONSOLE=n/g' debian/build/$@/.config
	@sed -i 's/CONFIG_LOCALVERSION=""/CONFIG_LOCALVERSION="-turing-rk3588"/g' debian/build/$@/.config

	@mkdir -p debian/build/$@/arch/arm/mach-rockchip
	@cp arch/arm/mach-rockchip/decode_bl31.py debian/build/$@/arch/arm/mach-rockchip/decode_bl31.py

	@cp debian/rkbin/$(BL31_BLOB) debian/build/$@/bl31.elf

	make O=debian/build/$@ \
	  CROSS_COMPILE=$(CROSS_COMPILE) \
	  SOURCE_DATE_EPOCH=$(shell date +%s) \
	  ARCH=arm \
	  $(NJOBS) \
	  BL31=../../../debian/rkbin/$(BL31_BLOB) \
	  spl/u-boot-spl.bin u-boot.dtb u-boot.itb

	./debian/build/$@/tools/mkimage -n rk3588 -T rksd -d \
	  debian/rkbin/$(DDR_BLOB):debian/build/$@/spl/u-boot-spl.bin \
	  debian/build/$@/idbloader.img

build: ${BOARDS}

binary-arch: $(addprefix package-,$(BOARDS))  

binary: binary-arch

package-%:
	@rm -rf debian/tmp && mkdir -m 755 -p debian/tmp/u-boot/usr/lib/u-boot-turing-rk3588
	@cp debian/build/$(subst package-,,$@)/u-boot.itb debian/tmp/u-boot/usr/lib/u-boot-turing-rk3588/u-boot.itb
	@cp debian/build/$(subst package-,,$@)/idbloader.img debian/tmp/u-boot/usr/lib/u-boot-turing-rk3588/idbloader.img

	@mkdir -m 755 -p "debian/tmp/u-boot/DEBIAN"
	@mkdir -p "debian/tmp/u-boot/usr/share/doc/u-boot-turing-rk3588"
	@cp debian/copyright "debian/tmp/u-boot/usr/share/doc/u-boot-turing-rk3588"
	@cp debian/changelog "debian/tmp/u-boot/usr/share/doc/u-boot-turing-rk3588/changelog.Debian"
	@gzip -9 "debian/tmp/u-boot/usr/share/doc/u-boot-turing-rk3588/changelog.Debian"
	@sh -c "cd 'debian/tmp/u-boot'; find . -type f ! -path './DEBIAN/*' -printf '%P\0' | xargs -r0 md5sum > DEBIAN/md5sums"
	@chown -R root:root "debian/tmp/u-boot" && chmod -R go-w "debian/tmp/u-boot" && chmod -R a+rX "debian/tmp/u-boot"
	@dpkg-gencontrol -pu-boot-$(subst -rk3588,,$(subst -rk3588s,,$(subst _,-,$(subst package-,,$@)))) -P"debian/tmp/u-boot"
	@dpkg --build "debian/tmp/u-boot" ..

clean:
	@rm -rf debian/*tmp debian/tmp debian/build debian/files
	$(MAKE) clean
