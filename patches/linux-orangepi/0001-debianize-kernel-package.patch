-mkdir -p "$destdir"
-(cd $destdir; patch -p1 < /tmp/headers-debian-byteshift.patch)
-(cd $srctree; tar -c -f - -T -) < "$objtree/debian/hdrsrcfiles" | (cd $destdir; tar -xf -)
